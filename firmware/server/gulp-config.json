{
    "build": {
        "src":  {
            "css":   [
                "node_modules/semantic-ui/dist/components/reset.css",
                "node_modules/semantic-ui/dist/components/site.css",
                "node_modules/semantic-ui/dist/components/container.css",
                "node_modules/semantic-ui/dist/components/grid.css",
                "node_modules/semantic-ui/dist/components/header.css",
                "node_modules/semantic-ui/dist/components/image.css",
                "node_modules/semantic-ui/dist/components/menu.css",
                "node_modules/semantic-ui/dist/components/divider.css",
                "node_modules/semantic-ui/dist/components/list.css",
                "node_modules/semantic-ui/dist/components/segment.css",
                "node_modules/semantic-ui/dist/components/dropdown.css",
                "node_modules/font-awesome/css/font-awesome.css",
                "assets/styles/core.scss"
            ],
            "js":    [
                "node_modules/requirejs/require.js",
                "node_modules/jquery/dist/jquery.js",
                "node_modules/semantic-ui/dist/semantic.js",
                "assets/scripts/**/*.js"
            ],
            "tpl":   [
                "assets/templates/pages/*"
            ],
            "img":   [
                "assets/images"
            ],
            "fonts": {
                "assets/fonts":                    "/",
                "node_modules/font-awesome/fonts": "/"
            }
        },
        "dest": {
            "css":   "web/css",
            "js":    "web/js",
            "img":   "web/img",
            "fonts": "web/fonts",
            "tpl":   "web/tpl"
        }
    },
    "watch": {
        "css":   "assets/styles/**",
        "js":    "assets/scripts/**",
        "tpl":   "assets/templates/**",
        "img":   "assets/images/**",
        "fonts": "assets/fonts/**"
    },
    "clean": {
        "css":   "web/css/**",
        "js":    "web/js/**",
        "img":   "web/img/**",
        "fonts": "web/fonts/**",
        "tpl":   "web/tpl/**"
    }
}
