<!doctype html>
<html class="no-js" lang="en">
    <head>
        <title>{% block title %}GPS Tracker{% endblock %}</title>
        <meta charset="{{ _charset }}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <link rel="icon" type="image/x-icon" href="/favicon.ico"/>
        {% block styles %}
            <link href="/css/app-dev.css" rel="stylesheet"/>
        {% endblock %}
        {% block head %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="ui fixed inverted menu" style="height: 55px">
                <div class="ui container">
                    <a href="/" class="header item">GPS Tracker</a>
                </div>
            </div>

            {% block content %}{% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="application/javascript"></script>
            <script src="/js/app-dev.js" type="application/javascript"></script>
        {% endblock %}
    </body>
</html>
